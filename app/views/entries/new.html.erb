<h1 style="text-align: center">Track Your Mood & Health</h2>
<div class="container">
    <div class="row">
    <%= form_with(model: @entry) do |form| %>
        <h3 class="text-lg font-semibold mb-2" style="text-align: center">How are you feeling?</h3>
        <%= form.text_field :title, class: "form-control border-primary mb-1", required: true, placeholder: "Enter title..." %>
        <%= form.text_field :description, class: "form-control border-primary mb-1", required: true, placeholder: "Enter description..." %>
        <%= form.select :mood, 0..10, class: "form-control border-primary mb-1"%>
        
        <h3 class="text-lg font-semibold mb-2" style="text-align: center">Health Tracker</h3>
        <%= form.number_field :sleep_hrs, max: 24, class: "form-control border-primary mb-1", placeholder: "Enter your sleep in hours..."%>
        <%= form.number_field :steps, max: 24, class: "form-control border-primary mb-1", placeholder: "Enter your total steps in hours..."%>
        <%= form.number_field :proteins, class: "form-control border-primary mb-1", placeholder: "Enter your protein in grams..."%>
        <%= form.number_field :carbs, class: "form-control border-primary mb-1", placeholder: "Enter your carb in grams..."%>
        <%= form.number_field :fats, class: "form-control border-primary mb-1", placeholder: "Enter your fat in grams..."%>
        <%= form.submit %>
    <% end %>
    </div>
</div>

<div class="max-w-md mx-auto bg-card text-card-foreground p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Track Your Mood & Health</h2>

  <div class="mb-6">
    <h3 class="text-lg font-semibold mb-2">Mood Tracker</h3>
    <label for="title" class="block text-sm mb-1">Title:</label>
    <input type="text" id="title" name="title" placeholder="Enter title..." class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary" />
    <label for="description" class="block text-sm mb-1 mt-2">Description:</label>
    <textarea
      id="description"
      name="description"
      placeholder="Enter description..."
      class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary"
    ></textarea>
    <label for="mood" class="block text-sm mb-1 mt-2">Mood (1-10):</label>
    <select id="mood" name="mood" class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
    </select>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-2">Health Tracker</h3>
    <label for="sleep" class="block text-sm mb-1">Sleep (hours):</label>
    <input type="number" id="sleep" name="sleep" placeholder="Enter hours of sleep..." class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary" />
    <label for="steps" class="block text-sm mb-1 mt-2">Daily Steps:</label>
    <input type="number" id="steps" name="steps" placeholder="Enter daily steps..." class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary" />
    <label for="carbs" class="block text-sm mb-1 mt-2">Carbs (g):</label>
    <input type="number" id="carbs" name="carbs" placeholder="Enter carbs intake..." class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary" />
    <label for="proteins" class="block text-sm mb-1 mt-2">Proteins (g):</label>
    <input
      type="number"
      id="proteins"
      name="proteins"
      placeholder="Enter proteins intake..."
      class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary"
    />
    <label for="fats" class="block text-sm mb-1 mt-2">Fats (g):</label>
    <input type="number" id="fats" name="fats" placeholder="Enter fats intake..." class="w-full px-3 py-2 placeholder-input border rounded-lg focus:outline-none focus:ring focus:ring-primary" />
  </div>
</div>
<%= form_with(model: @entry) do |form| %>
 <div>
   <%= form.label :title %>
   <%= form.text_field :title %>
 </div>
 <div>
   <%= form.submit %>
 </div>
<% end %>

<br>

<div>
 <%= link_to "Back to home", root_path %>
</div>